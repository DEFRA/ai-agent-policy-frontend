{% extends "govuk/template.njk" %}

{# Import GOVUK components globally #}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}

{# Import custom components globally #}
{% from "heading/macro.njk" import appHeading %}

{% set mainClasses = "app-main-wrapper" %}

{% block head %}
  <link href="{{ getAssetPath('stylesheets/application.scss') }}" rel="stylesheet">
  <style>
    .app-banner {
      background-color: #fff2bf;
      border-bottom: 1px solid #b1b4b6;
      padding: 10px 0;
      text-align: center;
    }
    .app-banner__text {
      color: #0b0c0c;
      font-family: "GDS Transport", arial, sans-serif;
      font-size: 16px;
      line-height: 1.25;
      margin: 0;
    }
    .govuk-header__content {
      text-align: center;
    }
  </style>
{% endblock %}

{% block header %}
  <header class="govuk-header" role="banner" data-module="govuk-header">
    <div class="govuk-width-container">
      <div class="govuk-header__container">
        <div class="govuk-header__content">
          <a href="{{ serviceUrl }}" class="govuk-header__link govuk-header__service-name">
            {{ serviceName }}
          </a>
        </div>
      </div>
    </div>
  </header>

  {{ govukServiceNavigation({
    navigation: navigation
  }) }}

  <div class="app-banner">
    <p class="app-banner__text">This is a proof of concept system and is not intended for production use</p>
  </div>
{% endblock %}

{% block pageTitle %}
  {{ pageTitle }} | {{ serviceName }}
{% endblock %}

{% block beforeContent %}
  {% if breadcrumbs.length > 1 %}
    {{ govukBreadcrumbs({
      items: breadcrumbs
    }) }}
  {% endif %}
{% endblock %}

{% block content %}{% endblock %}

{% block footer %}{% endblock %}

{% block bodyEnd %}
  <script type="module" src="{{ getAssetPath('application.js') }}"></script>
{% endblock %}
